@model Rocky.Models.Category

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3"> Add Category </h2>
        </div>
        <br />

        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <label asp-for="DisplayOrder"></label>
                </div>
                <div class="col-6">
                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3 offset-2">
                    <input type="submit" class="btn btn-info form-control w-100" value="Create" />
                </div>
                <div class="col-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-success w-100">Back</a>
                </div>
            </div>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
