@model Rocky.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
    </dl>
    
    <form method="post" asp-action="DeleteOnPost">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="row">
                <div class="col-3 offset-2">
                    <input type="submit" class="btn btn-danger form-control" value="Delete" />
                </div>
                <div class="col-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-success w-100">Back</a>
                </div>
            </div>
        </div>
    </form>
</div>
